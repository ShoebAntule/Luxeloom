<%- include('./partials/header') %>

<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="bg-white p-8 rounded shadow-md w-full max-w-md">
        <h2 class="text-2xl font-bold mb-4 text-center">My Account</h2>

        <% if (user) { %>
            <div class="mb-4">
                <p class="text-gray-600"><strong>Name:</strong> <%= user.fullname %></p>
                <p class="text-gray-600"><strong>Email:</strong> <%= user.email %></p>
            </div>
        <% } else { %>
            <p class="text-red-500">User information not available.</p>
        <% } %>

        <a href="/users/logout" class="block text-center mt-6 bg-blue-500 text-white py-2 rounded hover:bg-blue-600">
            Logout
        </a>
    </div>
</div>

<%- include('./partials/footer') %>
