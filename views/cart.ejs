<%- include('./partials/header') %>

<div class="px-20 py-20 space-y-20">
  <% user.cart.forEach(function(item, idx) { 
    const itemBill = bills[idx];
  %>
    <div class="flex flex-col md:flex-row gap-10 items-start">

      <!-- Product Image + Controls -->
      <div class="w-full md:w-1/3 rounded-md overflow-hidden shadow-lg">
        <div class="w-full flex justify-center items-center h-80 bg-[<%= item.bgcolor %>]">
          <img class="h-[18rem]" src="data:image/jpeg;base64,<%= item.image.toString('base64') %>" alt="<%= item.name %>">
        </div>
        <div class="w-full flex justify-between px-5 py-4 bg-[<%= item.panelcolor %>]">
          <h3 class="text-2xl font-semibold"><%= item.name %></h3>
          <div class="flex items-center gap-2">
            <button class="w-7 h-7 bg-white rounded-full flex items-center justify-center ri-add-line"></button>
            <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
            <button class="w-7 h-7 bg-white rounded-full flex items-center justify-center ri-subtract-line"></button>
          </div>
        </div>
        <div class="flex text-white items-center justify-between px-5 py-3 bg-[<%= item.textcolor %>]">
          <h4 class="text-lg font-medium">Net Total</h4>
          <h2 class="text-lg font-semibold">₹ <%= itemBill %></h2>
        </div>
      </div>

      <!-- Price Breakdown -->
      <div class="w-full md:w-2/3">
        <h3 class="text-xl font-semibold mb-5">Price Breakdown</h3>
        <div class="px-10 space-y-3">
          <div class="flex">
            <h4 class="w-1/3 font-medium">Total MRP</h4>
            <h4>₹ <%= item.price %></h4>
          </div>
          <div class="flex">
            <h4 class="w-1/3 font-medium">Discount on MRP</h4>
            <h4>₹ <%= item.discount %></h4>
          </div>
          <div class="flex">
            <h4 class="w-1/3 font-medium">Platform Fee</h4>
            <h4>₹ 20</h4>
          </div>
          <div class="flex">
            <h4 class="w-1/3 font-medium">Shipping Fee</h4>
            <h4>FREE</h4>
          </div>
        </div>

        <div class="w-full h-[1px] bg-black mt-10 mb-5"></div>

        <div class="flex justify-between items-center">
          <h3 class="text-xl font-semibold">Total Amount</h3>
          <h3 class="text-green-600 font-bold text-xl">₹ <%= itemBill %></h3>
        </div>
      </div>

    </div>
  <% }) %>

  <!-- Optional: Total Bill for entire cart -->
  <div class="mt-20 text-right pr-10">
    <h2 class="text-2xl font-bold">Total Cart Bill: ₹ <%= totalBill %></h2>
  </div>
</div>

<%- include('./partials/footer') %>
